# Install systemd phase targets for dependency management
INSTALL files/etc/systemd/system/zeropoint-phase-base.target /etc/systemd/system/zeropoint-phase-base.target
INSTALL files/etc/systemd/system/zeropoint-phase-utilities.target /etc/systemd/system/zeropoint-phase-utilities.target
INSTALL files/etc/systemd/system/zeropoint-phase-connectivity.target /etc/systemd/system/zeropoint-phase-connectivity.target
INSTALL files/etc/systemd/system/zeropoint-phase-storage.target /etc/systemd/system/zeropoint-phase-storage.target
INSTALL files/etc/systemd/system/zeropoint-phase-platformtools.target /etc/systemd/system/zeropoint-phase-platformtools.target
INSTALL files/etc/systemd/system/zeropoint-phase-drivers.target /etc/systemd/system/zeropoint-phase-drivers.target
INSTALL files/etc/systemd/system/zeropoint-phase-agent.target /etc/systemd/system/zeropoint-phase-agent.target
INSTALL files/etc/systemd/system/zeropoint-phase-cleanup.target /etc/systemd/system/zeropoint-phase-cleanup.target

# Enable all phase targets
RUN systemctl enable zeropoint-phase-base.target zeropoint-phase-utilities.target zeropoint-phase-connectivity.target zeropoint-phase-storage.target zeropoint-phase-platformtools.target zeropoint-phase-drivers.target zeropoint-phase-agent.target zeropoint-phase-cleanup.target